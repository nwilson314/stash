{
    "manifest_version": 3,
    "browser_specific_settings": {
      "gecko": {
        "id": "nsw.wilson@gmail.com"
      }
    },
    "name": "stash-ext",
    "version": "1.0",
    "description": "save links to stash with one click",
    "permissions": ["activeTab", "storage", "scripting"],
    "host_permissions": ["https://stash-link.fly.dev/*"],
    "background": {
      "scripts": ["background.js"]
    },
    "action": { "default_popup": "popup.html" },
    "commands": {
      "save-url": {
        "suggested_key": { "default": "Ctrl+Shift+S" },
        "description": "save current page to stash"
      }
    }
  }
  